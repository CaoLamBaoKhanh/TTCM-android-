<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundToolbar">
    <TextView
        android:id="@+id/txtSuaTenMonAn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_margin="@dimen/size10dp"
        android:textSize="@dimen/size18sp"
        android:hint="@string/tenmonan"
        android:textColorHint="@color/colorGray"/>
    <TextView
        android:id="@+id/txtSuaGiaMonAn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_margin="@dimen/size10dp"
        android:textSize="@dimen/size18sp"
        android:hint="@string/giatien"
        android:textColorHint="@color/colorGray"/>
    <Button
        android:id="@+id/btnĐongYSuaMonAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dongy"
        android:layout_gravity="center"
        android:textSize="@dimen/size18sp"
        />

</LinearLayout>